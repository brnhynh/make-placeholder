{
  "name": "make-placeholder",
  "version": "0.4.0",
  "description": "CLI for creating placeholders offline.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "rimraf dist && parcel build --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brnhynh/make-placeholder.git"
  },
  "keywords": [
    "node",
    "cli",
    "placeholder",
    "placeholder-generator",
    "offline",
    "image-generation",
    "command-line",
    "developer-tools"
  ],
  "author": {
    "name": "Brian Huynh",
    "url": "https://github.com/brnhynh/",
    "email": "brianhuynh@skiff.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/brnhynh/make-placeholder/issues"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "source": "./src/index.js",
  "module": "./dist/index.js",
  "bin": {
    "make-placeholder": "./dist/index.js"
  },
  "targets": {
    "module": {
      "context": "node",
      "outputFormat": "esmodule",
      "optimize": true,
      "sourceMap": false,
      "includeNodeModules": [
        "commander",
        "jimp"
      ]
    }
  },
  "homepage": "https://github.com/brnhynh/make-placeholder#readme",
  "dependencies": {
    "commander": "^11.1.0",
    "jimp": "^0.22.10"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^43.0.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "jsdoc": "^4.0.2",
    "parcel": "^2.10.2",
    "prettier": "3.0.3",
    "rimraf": "^5.0.5"
  }
}
